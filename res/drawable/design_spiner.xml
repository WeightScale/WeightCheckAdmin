<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffe5e5e5"/>
            <stroke
                    android:width="1dp"
                    android:color="#ffc1c1c1"/>
            <corners
                    android:radius="10dp"/>
            <!--<padding0
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />-->
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#ffe5e5e5"/>
            <stroke
                    android:width="1dp"
                    android:color="#ffc1c1c1"/>
            <corners
                    android:radius="8dp"/>
            <!--<padding0
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />-->
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#ffe5e5e5"
                    android:endColor="#ffc1c1c1"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="#ff9d9d9d"/>
            <corners
                    android:radius="8dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>

        </shape>
    </item>
</selector>