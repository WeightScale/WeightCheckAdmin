<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="windowTitleStyle">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Preferences.white" parent="android:Theme.Light.NoTitleBar">
    </style>

    <style name="CustomImageButton">
        <item name="android:background">@drawable/design</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomButton">
        <item name="android:background">@drawable/design</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomSpinner" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/round_rectangle_w</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="android:Theme.Dialog"><!--parent="android:Theme.Panel"-->
        <item name="@android:background">@android:color/background_light</item>
        <item name="@android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/text</item>
        <item name="android:panelBackground">@color/dialog</item>
    </style>

    <style name="TextAppearanceWindowTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_micro</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomWeightTextView">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/weight_progress</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>