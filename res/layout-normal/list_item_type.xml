<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content" android:gravity="left|center"
              android:orientation="horizontal" android:layout_width="fill_parent" android:padding="@dimen/padding">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:padding="@dimen/padding" android:layout_weight="1">
        <TextView android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:id="@+id/topText"
                  android:textColor="@android:color/white"
                  android:textSize="@dimen/text_medium"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" android:textSize="@dimen/text_micro"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/atomPay_removePay"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_action_delete"
            android:focusable="false" android:focusableInTouchMode="false"
            android:onClick="removeAtomPayOnClickHandler" android:clickable="true"
            android:background="@drawable/image_selector"/>

</LinearLayout>