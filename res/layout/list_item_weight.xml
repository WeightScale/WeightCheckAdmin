<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content" android:gravity="left|center"
              android:paddingBottom="1px"
              android:paddingTop="1dp" android:paddingLeft="5dp" android:orientation="vertical"
              android:layout_width="match_parent" android:scrollbarAlwaysDrawVerticalTrack="true">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="39dp" android:background="@drawable/round_rectangle">
        <TextView
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:text="Data Time"
                android:id="@+id/list_weight_time"
                android:layout_alignParentLeft="true" android:textColor="@color/text"
                android:focusable="false"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:focusable="false"
                android:checked="false"
                android:layout_gravity="right" android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>
        <TextView
                android:layout_height="25dp"
                android:text="Weight"
                android:id="@+id/list_weight_weight"
                android:layout_width="72dp"
                android:gravity="center_vertical|right"
                android:textSize="20sp"
                android:background="@drawable/round_rectangle"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:textColor="@color/text"
                android:layout_below="@+id/list_weight_time"
                android:layout_alignTop="@+id/list_weight_time"
                android:layout_alignBottom="@+id/list_weight_vendor"
                android:layout_toLeftOf="@+id/checkBox"
                android:layout_toRightOf="@+id/list_weight_time"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="24dp"
                android:text="Vendor"
                android:id="@+id/list_weight_vendor" android:layout_gravity="center" android:textColor="@color/text"
                android:gravity="center_vertical|left" android:layout_below="@+id/list_weight_time"
                android:layout_alignRight="@+id/list_weight_time"/>
    </RelativeLayout>
</LinearLayout>